{
  "manifest_version": 2,
  "name": "Flickr Fixr",
  "short_name": "Flickr Fixr",
  "description": "Makes Flickr awesome (again) ! :-)",
  "version": "1.2",
  "author": "Stig Nygaard",
  "homepage_url": "https://github.com/StigNygaard/Stigs_Flickr_Fixr",
  "icons": {
    "16": "icons/fr16.png",
    "32": "icons/fixr32.png",
    "48": "icons/fixr48.png",
    "64": "icons/fixr64.png",
    "96": "icons/fixr96.png",
    "128": "icons/fixr128.png",
    "256": "icons/fixr256.png"
  },
  "applications": {
    "gecko": {
      "strict_min_version": "52.0"
    }
  },
  "minimum_chrome_version": "60.0",
  "content_scripts": [
    {
      "matches": ["https://*.flickr.com/*"],
      "js": ["Stigs_Flickr_Fixr.user.js"],
      "run_at": "document_start"
    }
  ]
}